{
  "manifest_version": 3,
  "name": "WhatsApp Notification Sound Changer",
  "version": "1.0",
  "description": "Set custom notification sounds for WhatsApp Web.",
  "author": {
    "email": "aaron@mejia.dev"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/default-icon.png"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage","tabs","offscreen"
  ],
  "background": {
    "service_worker": "scripts/service-worker.js"
  },
  "content_scripts": [
    {
      "js": ["scripts/injector.js"],
      "matches": [
        "https://web.whatsapp.com/*",
        "http://localhost:5173/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/inject.js"],
      "matches": [
        "https://web.whatsapp.com/*",
        "http://localhost:5173/*"
      ]
    }
  ]
}