{
  "manifest_version": 3,
  "name": "WhatsApp Notification Sound Changer",
  "version": "1.0",
  "description": "Set custom notification sounds for WhatsApp Web!",
  "author": {
    "email": "aaron@mejia.dev"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/default-icon.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "js": ["scripts/injector.js"],
      "matches": [
        "https://web.whatsapp.com/*",
        "http://localhost:5173/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/inject.js"],
      "matches": [
        "https://web.whatsapp.com/*",
        "http://localhost:5173/*"
      ]
    }
  ]
}